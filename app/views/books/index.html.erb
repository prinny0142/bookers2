<body>
  <div class="container">
    <div class="row">
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <%= render 'users/form' %>

    <div class="row">
      <div class="col-xs-3">
        <%= render 'users/info', user: current_user, book: @book %>
      </div>

      <div class="col-xs-9">
        <%= render 'shelf', books: @books %>
      </div>
    </div>
  </div>
</body>