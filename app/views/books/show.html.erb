<body>
  <div class="container">
    <div class="row">
      <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-3">
      <%= render 'users/list', user: @user, book: @book %>
      </div>
      
      <div class="col-xs-9">
        <h2>Book detail</h2>

        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                 <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: '10*10' %>
                 <br><%= @book.user.name %></br>
                 <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>

              <%= render 'favorites', book: @book %>

              <td>
                コメント数: <%= @book.book_comments.count %>
              </td>

              <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></td>

              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>

        <p>コメント一覧</p>
        <% @book.book_comments.each do |book_comment| %>
          <span><%= book_comment.comment %></span>
          <% if book_comment.user_id == current_user.id %>
          <span><%= link_to '削除', book_book_comments_path(book_comment.id), method: :delete %></span>
          <% end %>
          </br>
        <% end %>

        <%= form_for [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, cols: '100', rows:'5' %>
          <%= f.submit '送信' %>
        <% end %>
      </div>
    </div>
  </div>
</body>