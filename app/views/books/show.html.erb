<body>
  <div class="container">
    <div class="row">
      <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-3">
      <%= render 'users/list', user: @user, book: @book %>
      </div>
      
      <div class="col-xs-9">
        <h2>Book detail</h2>

        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                 <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: '10*10' %>
                 <br><%= @book.user.name %></br>
                 <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>

              <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path %></td>

              <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>