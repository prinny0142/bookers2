<body>
  <div class="container">
    <div class="row">
      <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-3">
      <%= render 'users/list', user: @user, book: @book %>
      </div>

      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40*40" %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>


</body>

