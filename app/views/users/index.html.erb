<body>
    <% if @book.errors.any? %>
      <h5><%= @book.errors.count %>件のエラーが発生しました。</h5>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
      <%= render 'users/list', user: @user, book: @book %>
      </div>
      
      <div class="col-xs-9">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <hbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg",size: "10*10" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
            <% end %>
          </hbody>
        </table>
      </div>
    </div>
  </div>
</body>