<body>
    <% if @book.errors.any? %>
      <h5><%= @book.errors.count %>件のエラーが発生しました。</h5>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <div class="container">

    <%= render 'users/form' %>

    <div class="row">
      <div class="col-xs-3">
        <%= render 'users/info', user: current_user, book: @book %>
      </div>

      <div class="col-xs-9">
        <%= render 'users/list', users: @users %>
      </div>
    </div>
  </div>
</body>